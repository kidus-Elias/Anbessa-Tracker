<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:background="@drawable/bkg">
    <LinearLayout
        android:gravity="center_vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="5dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:text="Driver Dashboard"
            android:textSize="25sp"
            android:padding="5dp"


            />
        <ImageButton
            android:id="@+id/dLogout"
            android:layout_width="40dp"
            android:layout_height="45dp"
            android:src="@drawable/logout"
            android:layout_marginLeft="160dp"
         android:backgroundTint="@color/blue"/>

    </LinearLayout>

    <fragment xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:map="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/map"
        android:name="com.google.android.gms.maps.SupportMapFragment"
        android:layout_width="match_parent"
        android:layout_height="700dp"
        tools:context=".DriverHome" />
    <LinearLayout
        android:gravity="center_horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView

            android:layout_gravity="left"
            android:layout_weight="0.5"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:text="Share Location:"
            android:textSize="20sp"
            android:padding="5dp"


            />
        <ImageButton
            android:id="@+id/startsharing"
            android:layout_alignParentRight="true"
            android:layout_weight="0.3"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:src="@drawable/locationon"
            android:backgroundTint="@color/blue"/>

        <ImageButton
            android:id="@+id/stopsharing"
            android:layout_weight="0.3"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:src="@drawable/locationoff"
            android:backgroundTint="@color/blue"
            />


</LinearLayout>
    <LinearLayout

        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <Button
            android:layout_margin="5dp"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:textSize="18sp"
            android:text="Edit Bus Info"
            android:id="@+id/edit"
            android:backgroundTint="@color/blue"
            android:textColor="@color/white"/>

    </LinearLayout>

</LinearLayout>
